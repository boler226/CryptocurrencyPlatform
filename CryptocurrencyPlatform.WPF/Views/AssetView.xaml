<UserControl  x:Class="CryptocurrencyPlatform.WPF.Views.AssetView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="../Styles/CardStyles.xaml"/>
                <ResourceDictionary Source="../Styles/SearchBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Верхній список-->
        <Grid Grid.Row="0" Width="1000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Style="{StaticResource TransparentButtonStyle}"
                    Content="◀"
                    Click="ScrollLeft_Click"/>

            <ScrollViewer x:Name="CardsScrollViewer"
                          Grid.Column="1"
                          VerticalScrollBarVisibility="Disabled"
                          HorizontalScrollBarVisibility="Hidden">
                <Grid>
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="CardsTransform"/>
                    </Grid.RenderTransform>

                    <ItemsControl ItemsSource="{Binding AssetCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource AssetCardStyleSmall}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Symbol}" FontStyle="Italic"/>
                                        <TextBlock Text="{Binding PriceUsd, StringFormat='Price: {0:C}'}"/>
                                        <TextBlock Text="{Binding ChangePercent24Hr, StringFormat='Change: {0}'}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>

            <Button Grid.Column="2"
                    Style="{StaticResource TransparentButtonStyle}"
                    Content="▶"
                    Click="ScrollRight_Click"/>
        </Grid>

        <!--Нижній список-->
        <StackPanel Grid.Row="1" Margin="10">
            <DockPanel LastChildFill="True" Margin="10 0 0 10">
                <TextBox x:Name="SearchBox"
                         Width="200"
                         DockPanel.Dock="Left"
                         Margin="0 0 15 0"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource CommonSearchBoxStyle}"
                         controls:TextBoxHelper.Watermark="Search..." />

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="▲ Price"
                            Command="{Binding SortByPriceAscCommand}"
                            Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="▼ Price"
                        Command="{Binding SortByPriceDescCommand}"
                        Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="▲ Change"
                        Command="{Binding SortByChangeAscCommand}"
                        Style="{StaticResource SortButtonStyle}"/>

                    <Button Content="▼ Change"
                        Command="{Binding SortByChangeDescCommand}"
                        Style="{StaticResource SortButtonStyle}"/>
                </StackPanel>
            </DockPanel>

            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          Height="500">
                
                <ItemsControl ItemsSource="{Binding FilteredAssetCards}" HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AssetCardStyleLarge}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Symbol}" FontStyle="Italic"/>
                                    <TextBlock Text="{Binding PriceUsd, StringFormat='Price: {0:C}'}"/>
                                    <TextBlock Text="{Binding ChangePercent24Hr, StringFormat='Change: {0}'}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>

</UserControl>
