<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="AssetCardStyleSmall" TargetType="Border">
        <Setter Property="Width" Value="260"/>
        <Setter Property="Height" Value="110"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Background" Value="#f8fdf9"/>
        <Setter Property="BorderBrush" Value="#709775"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style x:Key="AssetCardStyleLarge" TargetType="Border">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="120"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="Background" Value="#f4fcf5"/>
        <Setter Property="BorderBrush" Value="#415d43"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

</ResourceDictionary>
